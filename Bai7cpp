#include <iostream>

using namespace std;

void tamGiac(int n)
{
    for (int i = n-1; i >= 0; i--){
        int j = 0;
        for (; j < i; j++) cout << ' ';
        for (int k = 0; k < 2*(n-i-1)+1; k++) cout << '*';
        cout << endl;
    }
}

int main(){
    int n;
    cin >> n;
    tamGiac(n);
    return 0;
}
